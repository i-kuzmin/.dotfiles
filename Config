#!/bin/bash

if ! [ -z "$1" ]; then
    config_name=$1
else
    config_name=~/.i3/config
fi
if ! [ -z "$2" ]; then
    COMMENT="$2"
fi

if [ -z "$COMMENT" ]; then
    COMMENT='#'
fi

need_update()
{
    modifed="stat --printf %Y"
    ts=`$modifed $config_name`
    for file in $config_name-* ; do
        file_ts=`$modifed $file`;
        if [ $ts -lt $file_ts ]; then
            return 0
        fi
    done
    return 1
}

if need_update; then
    lock="$config_name.lock"
    lockfile-create "$lock"
        chmod 0644 $config_name
        echo "$COMMENT This file generated from $config_name-*" >$config_name
        echo "$COMMENT Please don't edit it manually as all changes will be overwritten" >>$config_name
        echo "$COMMENT" >>$config_name

        for file in $config_name-* ; do
            echo $COMMENT "$file"
            cat $file
        done >>$config_name
        chmod 0444 $config_name
    lockfile-remove "$lock"
fi

echo $config_name
# vim: ft=sh
