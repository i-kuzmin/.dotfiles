# xdg-autostart
# ${HOME}/.config/autostart/*.desktop
# /etc/xdg/autostart/*.desktop

exec --no-startup-id xargs <~/.xrandr xrandr

exec --no-startup-id dex -ae GNOME
exec --no-startup-id /usr/bin/xscreensaver -no-splash &
#exec --no-startup-id setxkbmap -layout us,ru -option grp:shifts_toggle -option ctrl:nocaps && xmodmap `~/.dotfiles/Config ~/.Xmodmap !`
exec --no-startup-id setxkbmap -layout us,ru -option grp:alt_shift_toggle && xmodmap `~/.dotfiles/Config ~/.Xmodmap !`

exec --no-startup-id pcmanfm --no-desktop -d &

exec --no-startup-id conky -c ~/.conky/clock &>/dev/null &
exec --no-startup-id (sleep 1 && feh --bg-tile ~/.background)&

exec --no-startup-id urxvtd -q -f -o

exec --no-startup-id compton -CG \
    --opacity-rule "97:class_g = 'URxvt'" \
    --opacity-rule '97:name *= "GVIM"' &

#ctrl:swapcaps
#exec --no-startup-id pcmanfm --desktop
