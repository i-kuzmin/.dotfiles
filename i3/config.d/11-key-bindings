# Multimedia Keys
# Volue Control
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 1 +5% && killall -SIGUSR1 i3status
#bindsym XF86AudioRaiseVolume exec amixer -q set Master 5%+
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 1 -5% && killall -SIGUSR1 i3status
#bindsym XF86AudioLowerVolume exec amixer -q set Master 5%-
#bindsym XF86AudioMute exec amixer -q sset Master toggle
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 1 toggle && killall -SIGUSR1 i3status

# Display Keys
#bindsym 67 exec ~/.bin/sw-monitor toggle_press
#bindsym --release F2 exec ~/.bin/sw-monitor toggle_release

# System Keys
bindsym Print exec xfce4-screenshooter -f
bindsym Mod2+Print exec xfce4-screenshooter -r
bindsym Mod1+Print exec xfce4-screenshooter -w

# Monitors
#bindsym Super_L+XF86Display exec switch-monitor  

# Scratchpad
bindsym $mod+n scratchpad show
bindsym $mod+Shift+n move scratchpad
bindsym $mod+Shift+v [class="^Vlc$"] scratchpad show

#bindsym --release Mod1+c exec --no-startup-id xdotool key --clearmodifiers ctrl+c
#bindsym --release Mod1+v exec --no-startup-id xdotool key --clearmodifiers ctrl+v
bindsym --release Mod1+a exec --no-startup-id xdotool key --clearmodifiers ctrl+a
bindsym --release Mod1+x exec --no-startup-id xdotool key --clearmodifiers ctrl+x


# Terminal 
#bindsym $mod+Return exec gnome-terminal
#bindsym $mod+Return exec ~/.bin/term -e ~/.bin/urxvtc_tmux
bindsym $mod+Shift+Return exec ~/.i3/bin/term.tmux --new
bindsym $mod+Return       exec ~/.i3/bin/term.tmux
# || exec tmux new-session -n$USER -s$USER@$HOSTNAME"

# start dmenu (a program launcher)
bindsym $mod+u exec --no-startup-id ~/.i3/bin/menu  # There also is the (new) i3-dmenu-desktop which only displays applications

# mod+F3 volume control utility
bind $mod+69 exec pavucontrol

