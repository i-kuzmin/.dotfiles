#!/bin/bash

################################################################################

ask()
{
	while true; do
		echo -n -e "\r\n$1 (Yes/No): " > /dev/stderr
		read -n 1 input
        input=${input,,}
		if [ "$input" = "y" ]; then
			echo "" > /dev/stderr
			return 0
		elif [ "$input" = "a" ]; then
			force="true"
			echo "" > /dev/stderr
			return 0
		elif [ "$input" = "n" ]; then
			echo "" > /dev/stderr
			return 1
		fi
	done;
}

################################################################################

log()
{
	echo "$1" $2 >/dev/stderr
}

################################################################################

install()
{
    src=$(pwd)/$1
	dst=$2
	backup=$3

	if [ -z "$backup" ]; then
		backup=$dst.bkp
	fi

	if [ -L $dst ]; then
	   	if [ "$(readlink $dst)" = $src ]; then
			log "\"$dst\" already installed."
            return 0
		else
			if $(ask "\"$dst\" already exists (points to \"$(readlink $dst)\"). Owerwrite?" ); then
				rm $dst
			else
				log "Skip \"$dst\"."
				return 0
			fi
		fi
	elif [ -e $dst ]; then
		log "Store original \"$dst\" to \"$backup\""
		if [ -e "$backup" ]; then
			if $(ask "\"$backup\" exists. Owerwrite?"); then
				rm "$backup"
			fi
		fi
		if [ ! -e "$backup" ]; then
			( mv $dst $backup && log "$dst -> $backup" ) || return 1
		fi
	fi

	(ln -s $src $dst && log "\"$src\" -> \"$dst\" installed.") || return 1
}

################################################################################

install_i3()
{
	if ! [ -d ~/.i3 ]; then
		mkdir ~/.i3 || return 1
	fi
    install Config ~/.i3/Config
	install i3.config ~/.i3/config ~/.i3/0-config
    install i3status.conf ~/.i3/0-i3status.conf ~/.i3/1-i3status.conf
}

