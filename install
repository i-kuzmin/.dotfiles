main()
{
	install_i3
    install xinitrc   ~/.xinitrc   ~/.xinitrc.local
    install tmux.conf ~/.tmux.conf ~/.tmux.local
    install gitconfig ~/.gitconfig
    install vimrc     ~/.vimrc
    install vim       ~/.vim
    install bin       ~/.bin
    install Xresource ~/.Xresource
    install Xmodmap   ~/.Xmodmap
    install wiki      ~/.wiki
}

main
